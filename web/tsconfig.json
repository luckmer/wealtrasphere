{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@styles/*": [
        "./src/styles/*"
      ],
      "@interfaces/*": [
        "./src/types/*"
      ],
      "@static/*": [
        "./src/static/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@icons": [
        "../packages/ui/common/svg/*"
      ],
      "@components/*": [
        "../packages/ui/src/components/*"
      ],
      "@theme/*": [
        "../packages/ui/common/*"
      ],
      "@pages/*": [
        "../packages/ui/src/pages/*"
      ],
      "@containers/*": [
        "./src/containers/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ]
    },
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "index.js",
    ".",
    "./",
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}